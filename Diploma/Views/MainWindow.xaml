<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="Главное_меню" 
        x:Class="Diploma.MainWindow"
        Title="Главное меню" 
        Height="600" 
        Width="540" 
        WindowStartupLocation="CenterScreen" 
        SizeToContent="WidthAndHeight" 
        Foreground="White"
        FontFamily="Calibri" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="2" Grid.RowSpan="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Height="50" Width="250" VerticalAlignment="Center">
            <Label Content="ИИН: " 
                   Width="39" 
                   HorizontalAlignment="Left"
                   VerticalContentAlignment="Center" 
                   HorizontalContentAlignment="Center" 
                   Foreground="Black" Margin="17,-1,0,1" />
            <TextBox Text="" 
                     Name="IIN"
                     Width="180" 
                     HorizontalAlignment="Left" 
                     Margin="65,0,0,0" 
                     VerticalAlignment="Center" 
                     VerticalContentAlignment="Center" 
                     Height="20"/>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="2" Width="200">
            <Button Height="25"
                    Width="150"
                    Content="Добавить клиента" 
                    Foreground="White" 
                    Background="#FF04129D" 
                    BorderBrush="White" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="AddClient"/>
        </Grid>

        <Grid Grid.Row="1" Grid.ColumnSpan="3">
            <ListView x:Name="ListView" BorderBrush="Black" Margin="10" 
                      ItemsSource="{Binding clientsForShow}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="20"/>
                        <GridViewColumn Header="ИИН" DisplayMemberBinding="{Binding IIN}" Width="100"/>
                        <GridViewColumn Header="Полное имя" DisplayMemberBinding="{Binding Fullname}" Width="100"/>
                        <GridViewColumn Header="Дата рождения" DisplayMemberBinding="{Binding BirthDay}" Width="100"/>
                        <GridViewColumn Header="Общий балл критериев заемщика" DisplayMemberBinding="{Binding OverallCriteriaScore}" Width="100"/>
                        <GridViewColumn Header="Общая оценка" DisplayMemberBinding="{Binding OverallScore}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Height="50">
            <Button Content="Оценка кредитоспособности" 
                    Height="40"
                    Width="200"
                    Foreground="White" 
                    Background="#FF04129D" 
                    BorderBrush="White" />
        </Grid>


        <Grid Grid.Row="2" Grid.Column="2" Height="50">
            <Button Content="Кредитный калькулятор" 
                    Height="40"
                    Width="200"
                    Foreground="White" 
                    Background="#FF04129D" 
                    BorderBrush="White"/>
        </Grid>

    </Grid>
</Window>
